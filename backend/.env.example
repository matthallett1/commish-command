# Yahoo API Credentials
# Get these from https://developer.yahoo.com/apps/create/
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here

# Database
DATABASE_URL=sqlite:///./data/top_pot.db

# Optional: iMessage chat thread identifier
# You can find this by running: python -m data_ingestion.imessage_parser --list-chats
IMESSAGE_CHAT_ID=

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Debug mode — set to true for local development only.
# Enables auto-reload, API docs at /api/docs, and disables HSTS.
DEBUG=true

# CORS — comma-separated list of allowed origins.
# In production, set this to your actual frontend URL(s).
ALLOWED_ORIGINS=http://localhost:3000

# Anthropic API Key (for AI features)
ANTHROPIC_API_KEY=
